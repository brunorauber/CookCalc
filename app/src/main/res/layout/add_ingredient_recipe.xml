<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="Nome da Receita"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrediente:"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinnerIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrediente" />

    <EditText
        android:id="@+id/editTextValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Quantidade" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrediente base para pÃ£o"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonSave2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="saveIngredientRecipe"
        android:text="salvar" />

    <Button
        android:id="@+id/btnReturn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="returnToMain"
        android:text="Voltar" />

</LinearLayout>
